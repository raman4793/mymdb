<div id="mail-app" class="section">
  <div class="row">

    <div class="col s12">

      <div id="email-list" class="col s10 m4 l4 card-panel z-depth-1 scroll-box">
        <div id="chatapp" class="col s12 active" style="">
          <div class="collection border-none">
            <% authenticated_user.conversations.each do |conversation| %>
              <% if !conversation.id.nil? %>
                    <a href="<%= conversation_path(conversation) %>" data-remote="true" class="collection-item avatar border-none">
                      <img src="images/avatar-1.png" alt="" class="circle cyan">
                      <span class="line-height-0"><%= conversation.other(authenticated_user).name %></span>
                      <span class="medium-small right blue-grey-text text-lighten-3">5.00 AM</span>
                      <p class="medium-small blue-grey-text text-lighten-3"><%= conversation.messages.first.content if conversation.messages.first %></p>
                    </a>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div>
        <div id="messages-areas" >

        </div>
      </div>
    </div>
