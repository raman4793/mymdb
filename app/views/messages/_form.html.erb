<%= form_for message, remote: true do |f| %>
    <div class="input-group">
        <div class="col s8">
          <%= f.text_field :content, class: 'form-control', placeholder: 'Type Message ...' %>
        </div>
        <%= f.hidden_field :sendable_id, value: authenticated_user.id %>
        <%= f.hidden_field :sendable_type, value: authenticated_user.class.name %>
        <%= f.hidden_field :conversation_id, value: message.conversation.id %>
        <div class="col s4">
          <span class="input-group-btn">
            <%= f.submit 'Send', class: 'btn btn-info' %>
          </span>
        </div>
    </div>
<% end %>
