<div id="profile-card" class="card">
  <div class="card-image waves-effect waves-block waves-light">
    <img class="activator" src="<%= image_path user.background_pic %>" alt="user bg">
  </div>
  <div class="card-content">
    <img src="<%= image_path user.profile_pic %>" alt="" class="circle responsive-img activator card-profile-image cyan lighten-1 padding-2">

    <h5 class="card-title activator grey-text text-darken-4"><%= link_to user.name, user_path(user) %></h5>
    <p>
      <i class="material-icons">perm_identity</i> User since <%= user.created_at.strftime("%B %d, %Y") %></p>

    <p>
      <i class="material-icons">email</i> <%= user.email %></p>
  </div>
</div>